require 'rails_helper'

feature 'Public Recipes Index' do
  scenario 'should show a list of public recipes' do
    # Create some public recipes
    create_list(:recipe, 3, public: true)

    # Visit the public recipes index page
    visit public_recipes_path

    # Expect to see a list of public recipes
    expect(page).to have_css('.card', count: 3)
  end
end
