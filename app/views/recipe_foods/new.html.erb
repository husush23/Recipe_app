  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Add Food to Recipe</h2>

          <%= form_with model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe), method: :post, html: { class: 'form' } do |form| %>
            <div class="form-group">
              <%= form.label :food_id, 'Food' %>
              <%= form.collection_select :food_id, @foods, :id, :name, { prompt: 'Select a food' }, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :quantity, 'Quantity' %>
              <%= form.number_field :quantity, placeholder: 'Enter quantity', class: 'form-control' %>
            </div>

            <div class="form-group text-center">
              <%= form.submit 'Add Food', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
