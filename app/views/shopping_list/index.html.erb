<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="container d-flex justify-content-center">
                    <h1>Shopping list</h1>
                </div>
                    <div class="container d-flex justify-content-between">
                        <p>Amount of food to buy: <span><%= @shopping_list.length %></span></p>
                        <p>Total value of food needed: <%= @total_price %></span> $</p>
                    </div>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Food</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @shopping_list.each do |shopping_list_item| %>
                                <tr>
                                    <td><%= shopping_list_item[:food] %></td>
                                    <td><%= "#{shopping_list_item[:quantity]} #{shopping_list_item[:unit]}" %></td>
                                    <td><%= "#{shopping_list_item[:unit_price] * shopping_list_item[:quantity]} $" %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>>
</div>