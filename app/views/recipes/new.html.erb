<section>
  <h1>Create Recipe</h1> 
  <%= form_with model: @recipe, url: recipes_path, method: :post do |f| %>
  
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
    <br> <br>

    <%= f.label :preparation_time %>
    <%= f.number_field :preparation_time, required: true %>
    <br> <br>

     <%= f.label :cooking_time %>
     <%= f.number_field :cooking_time, required: true %>
     <br> <br>
       
     <%= f.label :description %><br>
     <%= f.text_area :description, required: true %>
     <br> <br>

     <%= f.label :public %> 
     
     <%= f.select :public, [['Public', true], ['Private', false]] %>
     <br> <br>

     <%= f.hidden_field :user_id, value: @user.id %>

     <%= f.submit "Create Recipe" %>
  <% end %>
</section>
