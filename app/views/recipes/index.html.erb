<div class="row justify-content-center mt-5">
  <div class="col-md-8">
    <% @recipes.each do |recipe| %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= link_to recipe.name, recipe_path(recipe.id) %></h5>
              <button class="btn btn-danger float-start" data-turbo-frame="_top">Remove</button>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card-body">
              <p class="card-text"><%= recipe.description %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to 'Add a recipe', new_recipe_path, class: "btn btn-success" %>
  </div>
</div>
