
  <div class="row justify-content-center mt-4">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Recipe Details</h2>

          <p>Preparation Time: <%= @recipe.preparation_time %></p>
          <p>Cooking Time: <%= @recipe.cooking_time %></p>
          <p>Description: <%= @recipe.description %></p>

          <%= link_to 'Add Ingredients', new_recipe_recipe_food_path(@recipe.id), class: 'btn btn-primary' %>

          <h2 class="mt-4">FOOD LIST:</h2>

          <table class="table table-bordered">
            <thead class="thead-dark">
              <tr>
                <th>Food</th>
                <th>Quantity</th>
                <th>Value</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @recipe.recipe_foods.each do |recipe_food| %>
                <%= render partial: 'recipe_food_row', locals: { recipe_food: recipe_food, recipe: @recipe } %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>